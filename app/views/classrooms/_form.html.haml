= form_for @classroom do |f|

  .field
    = f.label :class_name
    = f.text_field :class_name
  .field
    = f.label :class_space
    = f.text_field :class_space

  Courses:
  %br/
  %br/
  = f.fields_for :courses do |f|

    %fieldset

      .field
        = f.label :course_name
        = f.text_field :course_name
      .field
        = f.label :description
        = f.text_field :description
      .field
        = f.label :price
        = f.number_field :price
      .field
        = f.label :space
        = f.text_field :space
      .field
        = f.label :start_date
        = f.text_field :start_date
      .field
        = f.label :end_date
        = f.text_field :end_date
      .field
        = f.label :start_time
        = f.text_field :start_time
      .field
        = f.label :end_time
        = f.text_field :end_time
    %br/

  .actions
    = f.submit 'Save'
