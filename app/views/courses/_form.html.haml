= form_for @course do |f|

  %fieldset
    .field
      = f.label :course_code
      = f.text_field :course_code
    .field
      = f.label :course_name
      = f.text_field :course_name
    .field
      = f.label :description
      = f.text_field :description
    .field
      = f.label :price
      = f.number_field :price
    .field
      = f.label :space
      = f.text_field :space
    .field
      = f.label :classroom_id
      = f.select :classroom_id, options_for_select(Classroom.all.map {|classroom| [classroom.class_name,classroom.id]})
    .field
      = f.label :start_date
      = f.text_field :start_date
    .field
      = f.label :end_date
      = f.text_field :end_date
    .field
      = f.label :start_time
      = f.text_field :start_time
    .field
      = f.label :end_time
      = f.text_field :end_time
    %br/

  .actions
    = f.submit 'Save'
