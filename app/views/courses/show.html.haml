%h1= @course.course_name

%p
  code:
  = @course.course_code
  %br

  description:
  = @course.description
  %br

  price:
  = @course.price
  %br

  space:
  = @course.space
  %br

  Start Date:
  = @course.start_date
  %br

  End Date:
  = @course.end_date
  %br

  Start time:
  = @course.start_time
  %br

  End time:
  = @course.end_time
  %br



  %p
  - if can? :create, Course
    = link_to "Add a Course", new_course_path
    \|
  - if can? :edit, Course
    = link_to "Edit Course", edit_course_path(@course)
    \|
  - if can? :delete, Course
    = link_to "Remove Course", @course, :confirm => 'Are you sure?', :method => :delete